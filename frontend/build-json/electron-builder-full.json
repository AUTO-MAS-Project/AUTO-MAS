{
  "extends": null,
  "appId": "top.auto-mas.frontend",
  "productName": "AUTO-MAS",
  "asar": true,
  "afterAllArtifactBuild": "./scripts/post-build.js",
  "asarUnpack": [],
  "extraMetadata": {
    "env": "prod"
  },
  "files": [
    "dist/**",
    "dist-electron/**",
    "public/**",
    "!src/**",
    "!**/*.map"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "AUTO-MAS-Project",
      "repo": "AUTO-MAS"
    }
  ],
  "extraResources": [
    {
      "from": "src/assets",
      "to": "assets",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "node_modules/electron/dist/environment",
      "to": "../environment",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "requestedExecutionLevel": "requireAdministrator",
    "artifactName": "AUTO-MAS-Full-v${version}-${arch}.${ext}",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "public/AUTO-MAS.ico"
  },
  "nsis": {
    "artifactName": "AUTO-MAS-Full-Setup-v${version}-${arch}.${ext}",
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "AUTO-MAS",
    "differentialPackage": true
  }
}